<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="ListaProduto">

    <ContentPage.ToolbarItems> 
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
        <ToolbarItem Text="Relatorio" Clicked="ToolbarItem_Clicked2"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    
    <StackLayout>
      <SearchBar x:Name="txt_search" 
            Placeholder="Pesquisar por Produto ou Categoria" 
            TextChanged="txt_search_TextChanged"
            Margin="10, 10, 10, 0"/>

      <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">

            <ListView x:Name="lst_produtos"
                        IsPullToRefreshEnabled="True"
                        Refreshing ="lst_produtos_Refreshing"
                        ItemSelected="lst_produtos_ItemSelected">
                <ListView.Header>
                    <Grid ColumnDefinitions="100, 200, 100, 150, 250, 100"
                        BackgroundColor="{StaticResource PrimaryDark}">
                        <Label Grid.Column="0" Text="ID" Padding="5" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="2" Text="Preço" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="3" Text="Quantidade" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="4" Text="Categoria" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"/>
                        <Label Grid.Column="5" Text="Total" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="{StaticResource Primary}"/>                
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                            </ViewCell.ContextActions>
                            <Grid ColumnDefinitions="100, 200, 100, 150, 250, 100">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5" HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="1" Text="{Binding Descricao}"/>
                                <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:c}'}"/>
                                <Label Grid.Column="3" Text="{Binding Quantidade}" HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="4" Text="{Binding Categoria}" HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="5" Text="{Binding Total, StringFormat='{}{0:c}'}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
      </Frame>
    </StackLayout>
</ContentPage>